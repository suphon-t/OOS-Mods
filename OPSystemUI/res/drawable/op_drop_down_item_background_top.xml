<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="?opDropdownListItemSelectedColor" />
            <corners android:topLeftRadius="2.0dip" android:topRightRadius="2.0dip" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="?opDropdownListItemSelectedColor" />
            <corners android:topLeftRadius="2.0dip" android:topRightRadius="2.0dip" />
        </shape>
    </item>
</selector>